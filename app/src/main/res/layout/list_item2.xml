<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        tools:src="@android:mipmap/sym_def_app_icon"
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="8dp"
        >

        <TextView
            android:id="@+id/textTitleView"
            android:layout_width="wrap_content"
            android:textColor="@android:color/background_dark"
            android:layout_weight="4"
            android:layout_height="0dp"
            tools:text="bla bla bla bla bla "
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="8dp"/>
        <!--thong tin kenh-->
        <TextView
            android:id="@+id/textTitleChannelView"
            android:layout_width="wrap_content"
            android:layout_weight="3"
            android:layout_height="0dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginLeft="@dimen/customizeSpace"
            tools:text="bla bla bla bla bla bla " />
        <!--luot view -->
        <TextView
            android:id="@+id/text_count_view"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/customizeSpace"
            tools:text="bla bla bla bla bla bla "/>
        <!--thoi gian -->
        <TextView
            android:id="@+id/textTimeView"
            android:layout_width="wrap_content"
            android:layout_weight="2"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/customizeSpace"
            tools:text="312312312312" />

    </LinearLayout>
</LinearLayout>